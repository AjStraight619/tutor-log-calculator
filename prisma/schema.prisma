generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model TutoringSession {
  id            String    @id @default(uuid())
  date          DateTime?
  studentName   String?
  studentId     String?
  subject       String?
  topicsCovered String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
